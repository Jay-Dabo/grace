<div class="container main-content">
  <div class="col-md-12">
    <h1>Listing Churches</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Church image</th>
          <th>Name</th>
          <th>Denomination</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @churches.each do |church| %>
          <tr>
            <td><%= image_tag(church.church_image_url(:thumb)) %></td>
            <td><%= church.name %></td>
            <td><%= church.denomination %></td>
            <td><%= link_to 'Show', church %></td>
            <td><%= link_to 'Edit', edit_church_path(church) %></td>
            <td><%= link_to 'Destroy', church, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Church', new_church_path %>
  </div>
</div>
