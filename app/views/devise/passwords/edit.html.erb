<div class="container main-content">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: false, placeholder: "New password", required: true, autofocus: true, input_html: { class: "form-control" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true, input_html: { class: "form-control" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password", class: "btn btn-info block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
