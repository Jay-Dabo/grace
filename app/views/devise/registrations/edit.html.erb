<div class="container main-content">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Email Address", input_html: { class: "form-control" } %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, label: false, placeholder: "New Password", autocomplete: "off", required: false, input_html: { class: "form-control" } %>
        <%= f.input :password_confirmation, required: false, label: false, placeholder: "New Password Confirmation", input_html: { class: "form-control" } %>
        <%= f.input :current_password, label: false, placeholder: "Current Password", required: true, input_html: { class: "form-control" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn grn-btn block" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
