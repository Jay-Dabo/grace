<div class="container main-content">
  <header>
    <h1>Church Management Software</h1>
    <h2>Sign Up For Free</h2>
  </header>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <% resource.build_church %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: false, placeholder: "Email Address", required: true, autofocus: true, input_html: { class: "form-control" } %>
          <%= f.input :password, label: false, placeholder: "Password", required: true, input_html: { class: "form-control" } %>
          <%= f.input :password_confirmation, label: false, placeholder: "Password Confirmation", required: true, input_html: { class: "form-control" } %>
          <%= f.simple_fields_for :church do |church| %>
            <%= church.input :name, label: false, placeholder: "Church Name", required: true, input_html: { class: "form-control" } %>
            <%= church.input :denomination, collection: denominations, label: false, required: true, selected: "Non Denominational", input_html: { class: "form-control" } %>
            <%= church.input :church_image, as: :file, label: "Upload Your Church Logo", input_html: { class: "form-control" } %>
          <% end %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn main-btn block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
