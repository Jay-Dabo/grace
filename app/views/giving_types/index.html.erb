<h1>Giving Types <%= link_to 'New Giving type', new_church_giving_type_path(@church), class: "btn grn-btn" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @giving_types.each do |giving_type| %>
      <tr>
        <td><%= giving_type.giving_type %></td>
        <td class="actions">
          <%= link_to "<i class='fa fa-eye'></i>".html_safe, church_giving_type_path(@church, giving_type), title: "View", class: "action view" %>
          <%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_church_giving_type_path(@church, giving_type), title: "Edit", class: "action edit" %>
          <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, [@church, giving_type], method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete", class: "action delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
