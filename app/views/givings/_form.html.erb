<%= simple_form_for([@church, @giving]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :member_id, required: true, input_html: { class: "form-control" }, collection: @members.map{|member| [member.full_name, member.id]} %>
    <%= f.input :giving_type, required: true, input_html: { class: "form-control" }, collection: @giving_types.map{|giving_type| [giving_type.giving_type, giving_type.id]} %>
    <%= f.input :date_given, label: "Date", required: true, as: :datepicker, input_html: { class: "form-control" } %>
    <%= f.input :amount, label: false, placeholder: "Amount", required: true, input_html: { class: "form-control" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn grn-btn block" %>
  </div>
<% end %>
