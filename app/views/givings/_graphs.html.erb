<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <h3 class="text-center">Total Givings by Month</h3>
        <%= line_chart @givings.group_by_month(:date_given).count, xtitle: "Month", ytitle: "Total Givings", height: "200px" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <h3 class="text-center">Giving Types</h3>
        <%= pie_chart @givings.joins(:giving_type).group("giving_types.name").count, height: "200px" %>
      </div>
    </div>
  </div>
</div>
