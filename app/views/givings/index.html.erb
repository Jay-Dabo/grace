<h1>Givings <%= link_to 'New Giving', new_giving_path, class: "btn grn-btn" %></h1>
<hr/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Member</th>
      <th>Amount</th>
      <th>Date Given</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @givings.each do |giving| %>
      <tr>
        <td><%= giving.member.full_name %></td>
        <td><%= giving.amount %></td>
        <td><%= giving.date_given %></td>
        <td><%= link_to 'Show', giving %></td>
        <td><%= link_to 'Edit', edit_giving_path(giving) %></td>
        <td><%= link_to 'Destroy', giving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
