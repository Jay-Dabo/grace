<%= simple_form_for([@church, @group_member]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :member_id, collection: @groups, label_method: "name", label_value: "group_id", input_html: { class: "form-control" } %>
    <%= f.input :member_id, collection: @members, label_method: "full_name", label_value: "member_id", input_html: { class: "form-control" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn grn-btn block" %>
  </div>
<% end %>
