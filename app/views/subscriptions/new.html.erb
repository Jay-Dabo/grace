<div class="container main-content">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
      <h3>Thanks for Signing Up! Your First month is on Us.</h3>
      <p>
        Please provide a credit card for your monthly subscription. There are
        no contracts and you can cancel anytime although we hope you don't.
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <%= form_tag '/charge', method: :post, id: "payment-form" do %>
        <div class="form-row">
          <label for="card-element">
            Credit or debit card
          </label>
          <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
          </div>

          <!-- Used to display Element errors. -->
          <div id="card-errors" role="alert"></div>
        </div>

        <button class="btn main-btn">Create Subscription</button>
      <% end %>
    </div>
  </div>
</div>